{
  "manifest_version": 2,

  "name": "Study Buddy",
  "description": "Productivity extension.  Stay focused or the cat dies!",
  "version": "0.1",
  "background": {"scripts":["js/background.js"]},
  "permissions": [
	"webRequest",
	"webRequestBlocking",
	"storage",
	"<all_urls>"
  ],
  "browser_action": {
    "default_icon": "images/icon_off.png",
    "default_popup": "popup.html"
  }
}